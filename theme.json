{
  "version": 2,
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "customTemplates": [
    {
      "name": "blank",
      "postTypes": [
        "post",
        "page"
      ],
      "title": "Blank"
    }
  ],
  "settings": {
    "appearanceTools": true,
    "color": {
      "background": true,
      "custom": true,
      "customDuotone": true,
      "customGradient": true,
      "defaultDuotone": false,
      "defaultGradients": false,
      "defaultPalette": false,
      "duotone": [
        {
          "colors": [
            "#000000",
            "#ffffff"
          ],
          "name": "Black and White",
          "slug": "black-and-white"
        }
      ],
      "gradients": [
        {
          "gradient": "linear-gradient(0deg, var(--wp--preset--color--primary) 0%, var(--wp--preset--color--contrast) 100%)",
          "name": "Primary to Contrast",
          "slug": "primary-contrast"
        }
      ],
      "palette": [
        {
          "color": "transparent",
          "name": "Transparent",
          "slug": "transparent"
        },
        {
          "color": "#ffffff",
          "name": "Base",
          "slug": "base"
        },
        {
          "color": "#000000",
          "name": "Contrast",
          "slug": "contrast"
        },
        {
          "color": "#808080",
          "name": "Dark",
          "slug": "dark"
        },
        {
          "color": "#f0f0f0",
          "name": "Light",
          "slug": "light"
        },
        {
          "color": "#4700b9",
          "name": "Primary",
          "slug": "primary"
        },
        {
          "color": "#3dff70",
          "name": "Secondary",
          "slug": "secondary"
        }
      ],
      "text": true
    },
    "custom": {
      "fontWeight": {
        "black": 900,
        "bold": 700,
        "extra-bold": 800,
        "extra-light": 200,
        "light": 300,
        "medium": 500,
        "regular": 400,
        "semi-bold": 600,
        "thin": 100
      },
      "lineHeight": {
        "body": 1.5,
        "one": 1,
        "two": 2
      },
      "spacing": {
        "gap": "1.5rem"
      }
    },
    "layout": {
      "contentSize": "960px",
      "wideSize": "1320px"
    },
    "spacing": {
      "spacingSizes": [
        {
          "name": "20",
          "size": ".25rem",
          "slug": "20"
        },
        {
          "name": "30",
          "size": ".5rem",
          "slug": "30"
        },
        {
          "name": "40",
          "size": "1rem",
          "slug": "40"
        },
        {
          "name": "50",
          "size": "1.5rem",
          "slug": "50"
        },
        {
          "name": "60",
          "size": "2rem",
          "slug": "60"
        },
        {
          "name": "70",
          "size": "2.5rem",
          "slug": "70"
        },
        {
          "name": "80",
          "size": "3rem",
          "slug": "80"
        }
      ],
      "units": [
        "px",
        "em",
        "rem",
        "vh",
        "vw",
        "%"
      ]
    },
    "typography": {
      "customFontSize": true,
      "dropCap": false,
      "fluid": true,
      "fontFamilies": [
        {
          "fontFamily": "-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif",
          "name": "System Font",
          "slug": "system-font"
        },
        {
          "fontFamily": "\"Times New Roman\",\"New York\",Times,\"Noto Serif\",serif",
          "name": "Serif",
          "slug": "serif"
        },
        {
          "fontFamily": "Consolas,Menlo,Monaco,\"SF Mono\",\"DejaVu Sans Mono\",\"Roboto Mono\",\"Courier New\",Courier,monospace",
          "name": "Monospace",
          "slug": "monospace"
        },
        {
          "fontFace": [
            {
              "fontFamily": "Montserrat",
              "fontStretch": "normal",
              "fontStyle": "normal",
              "fontWeight": "400",
              "src": [
                "file:./assets/fonts/montserrat/Montserrat-Regular.woff2"
              ]
            },
            {
              "fontFamily": "Montserrat",
              "fontStretch": "normal",
              "fontStyle": "normal",
              "fontWeight": "600",
              "src": [
                "file:./assets/fonts/montserrat/Montserrat-SemiBold.woff2"
              ]
            },
            {
              "fontFamily": "Montserrat",
              "fontStretch": "normal",
              "fontStyle": "normal",
              "fontWeight": "800",
              "src": [
                "file:./assets/fonts/montserrat/Montserrat-ExtraBold.woff2"
              ]
            }
          ],
          "fontFamily": "\"Montserrat\",sans-serif",
          "name": "Montserrat",
          "slug": "montserrat"
        }
      ],
      "fontSizes": [
        {
          "fluid": false,
          "name": "Extra Small",
          "size": "0.85rem",
          "slug": "extra-small"
        },
        {
          "fluid": false,
          "name": "Small",
          "size": "1rem",
          "slug": "small"
        },
        {
          "fluid": false,
          "name": "Regular",
          "size": "1.125rem",
          "slug": "regular"
        },
        {
          "fluid": {
            "max": "1.5rem",
            "min": "1.25rem"
          },
          "name": "Medium",
          "size": "1.25rem",
          "slug": "medium"
        },
        {
          "fluid": {
            "max": "2rem",
            "min": "1.75rem"
          },
          "name": "Large",
          "size": "2rem",
          "slug": "large"
        },
        {
          "fluid": {
            "max": "2.75rem",
            "min": "2.25rem"
          },
          "name": "X-large",
          "size": "2.75rem",
          "slug": "x-large"
        },
        {
          "fluid": {
            "max": "3.5rem",
            "min": "2.5rem"
          },
          "name": "XX-large",
          "size": "3.5rem",
          "slug": "xx-large"
        }
      ],
      "fontStyle": true,
      "fontWeight": true,
      "letterSpacing": true,
      "textDecoration": true,
      "textTransform": true,
      "writingMode": true
    },
    "useRootPaddingAwareAlignments": true
  },
  "styles": {
    "blocks": {
      "core/button": {
        "variations": {
          "outline": {
            "spacing": {
              "padding": {
                "bottom": "0.75rem",
                "left": "1.75rem",
                "right": "1.75rem",
                "top": "0.75rem"
              }
            },
            "border": {
              "width": "3px"
            }
          }
        }
      },
      "core/cover": {
        "spacing": {
          "padding": {
            "bottom": "0",
            "left": "0",
            "right": "0",
            "top": "0"
          }
        }
      },
      "core/image": {
        "css": "& img {vertical-align: middle;}"
      },
      "core/list": {
        "css": "padding: 0; list-style-position: inside; &.has-background {padding: var(--wp--custom--spacing--gap);}"
      },
      "core/list-item": {
        "css": "{margin-top: 0; margin-bottom: 0;}"
      },
      "core/navigation": {
        "elements": {
          "link": {
            "typography": {
              "textDecoration": "none"
            },
            ":hover": {
              "typography": {
                "textDecoration": "underline"
              }
            }
          }
        },
        "spacing": {
          "blockGap": "var(--wp--custom--spacing--gap)"
        }
      },
      "core/paragraph": {
        "css": "&.has-background {padding: var(--wp--custom--spacing--gap);}"
      },
      "core/post-content": {
        "spacing": {
          "blockGap": "0"
        }
      },
      "core/separator": {
        "border": {
          "color": "currentColor",
          "radius": "0",
          "style": "solid",
          "width": "2px"
        },
        "css": "{border-width: 2px 0 0;} &:not(.is-style-wide):not(.is-style-dots):not(.alignwide):not(.alignfull) {width: 60px;} &.is-style-dots:before {font-family: inherit; font-size: var(--wp--preset--font-size--x-large); letter-spacing: 1rem; padding-left: 1rem;}"
      },
      "core/spacer": {
        "spacing": {
          "margin": {
            "top": "0 !important"
          }
        }
      },
      "core/template-part": {
        "spacing": {
          "margin": {
            "top": "0 !important"
          }
        }
      }
    },
    "color": {
      "background": "var(--wp--preset--color--base)",
      "text": "var(--wp--preset--color--contrast)"
    },
    "elements": {
      "button": {
        "border": {
          "color": "var(--wp--preset--color--transparent)",
          "radius": "0",
          "style": "solid",
          "width": "3px"
        },
        "color": {
          "background": "var(--wp--preset--color--contrast)",
          "text": "var(--wp--preset--color--base)"
        },
        "spacing": {
          "padding": {
            "bottom": "0.75rem",
            "left": "1.75rem",
            "right": "1.75rem",
            "top": "0.75rem"
          }
        },
        "typography": {
          "fontSize": "var(--wp--preset--font-size--small)",
          "lineHeight": "1.5"
        }
      },
      "h1": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--xx-large)"
        }
      },
      "h2": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--x-large)"
        }
      },
      "h3": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--large)"
        }
      },
      "h4": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--medium)"
        }
      },
      "h5": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--regular)"
        }
      },
      "h6": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--small)"
        }
      },
      "heading": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--system-font)",
          "fontStyle": "normal",
          "fontWeight": "var(--wp--custom--font-weight--bold)",
          "letterSpacing": "0",
          "lineHeight": "1.3"
        }
      },
      "link": {
        ":hover": {
          "typography": {
            "textDecoration": "none"
          }
        },
        "border": {
          "bottom": {
            "color": "",
            "style": "",
            "width": ""
          }
        },
        "color": {
          "text": "var(--wp--preset--color--primary)"
        },
        "typography": {
          "textDecoration": "underline"
        }
      }
    },
    "spacing": {
      "blockGap": "var(--wp--custom--spacing--gap)",
      "padding": {
        "bottom": "0",
        "left": "var(--wp--preset--spacing--50)",
        "right": "var(--wp--preset--spacing--50)",
        "top": "0"
      }
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--system-font)",
      "fontSize": "var(--wp--preset--font-size--regular)",
      "fontStyle": "normal",
      "fontWeight": "var(--wp--custom--font-weight--regular)",
      "letterSpacing": "0",
      "lineHeight": "1.5"
    }
  },
  "templateParts": [
    {
      "area": "header",
      "name": "header",
      "title": "Header"
    },
    {
      "area": "footer",
      "name": "footer",
      "title": "Footer"
    }
  ]
}
